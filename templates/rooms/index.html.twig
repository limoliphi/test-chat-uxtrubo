{% extends 'base.html.twig' %}

{% block title 'Rooms' %}

{% block body %}
    <h1>{{ rooms|length }} Rooms</h1>

    {% if rooms is not empty %}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for room in rooms %}
            <tr>
                <td>{{ room.name }}</td>
                <td><a href="">Show</a> </td>
                <td><a href="">Edit</a> </td>
                <td><a href="">Delete</a> </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}

    <p><a href="#">New room</a></p>

{% endblock %}
