{% extends 'layouts/base.html.twig' %}

{% block title 'Rooms' %}

{% block body %}
    <h1>{{ pluralize(rooms|length, 'Room') }}</h1>

    {% if rooms is not empty %}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for room in rooms %}
            <tr>
                <td>{{ room.name }}</td>
                <td><a href="{{ path('app_rooms_show', {'id': room.id}) }}">Show</a> </td>
                <td><a href="{{ path('app_rooms_edit', {'id': room.id}) }}">Edit</a> </td>
                <td><a href="">Delete</a> </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}

    <p><a href="{{ path('app_rooms_new') }}">New room</a></p>

{% endblock %}
