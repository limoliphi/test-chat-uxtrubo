{% extends 'layouts/base.html.twig' %}

{% block title 'Room #' ~ room.id %}

{% block body %}
    <turbo-frame id="room">
        <h1>Name : {{ room.name }}</h1>

        <p>
            <a href="{{ path('app_rooms_edit', {'id': room.id}) }}">Edit</a>
            {# permet de sortir du turbo-frame pour retourner sur la page compl√®te d'index des rooms #}
            <a href="{{ path('app_rooms_index') }}" data-turbo-frame="_top">Back</a>
        </p>
    </turbo-frame>

    {% for message in room.messages %}
        <div>
            <p>{{ message.createdAt|date('d M h:i') }} : {{ message.content }}</p>
        </div>
    {% endfor %}

    <p>
        <a href="{{ path('app_messages_new', {'room': room.id}) }}">New message</a>
    </p>
{% endblock %}